        </activity>
        <activity
            android:name="com.cloverstudio.spika.GroupProfileActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.cloverstudio.spika.MembersActivity"
            android:screenOrientation="portrait"
